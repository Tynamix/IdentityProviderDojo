@model Model.Weather

<div class="text-center">
    <h1 class="display-4">Wetter</h1>
   
    @if (Model != null)
    {
        
        <img width="75px"  src="http://openweathermap.org/img/w/@(Model.WeatherIcon).png"/>
    
        <h1>@Model.Temperature °C</h1>
    }
    else
    {
        <h1>Scheinbar darfst du keine Wetterdaten abrufen.</h1>
    }
</div>